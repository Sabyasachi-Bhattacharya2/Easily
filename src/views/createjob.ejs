<h1 class="mt-5 mb-4">Create A New Job</h1>

<form action="/createjob" method="post">
    <div class="mb-3">
        <label for="companyname" class="form-label">Company Name</label>
        <input type="text" class="form-control" id="email" name="companyname"  value="<%=companyname%>" readonly>
    </div>
    <div class="mb-3">
        <label for="role" class="form-label">Role</label>
        <input type="text" class="form-control" id="password" name="role" required>
    </div>
    <div class="mb-3">
        <label for="salary" class="form-label">Salary</label>
        <input type="number" class="form-control" id="password" name="salary" required>
    </div>
    <button type="submit" class="btn btn-primary">Create Job</button>
</form>